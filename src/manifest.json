{
  "manifest_version": 2,
  "version": "1.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "name": "whatsapp-green",
  "description": "A better WhatsApp Web Experience",
  "page_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["jquery.min.js", "eventPage.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://web.whatsapp.com/*",
        "https://developer.chrome.com/*"
      ],
      "js": ["jquery.min.js", "content.js"],
      "css": ["style.css"]
    }
  ],
  "options_page": "options.html",
  "permissions": ["tabs", "storage", "https://web.whatsapp.com/*"],
  "commands": {
    "toggle_chat_window": {
      "suggested_key": {
        "default": "Alt+Shift+K"
      },
      "description": "Toggle Chat window"
    },
    "lock_chatlist_panel": {
      "suggested_key": {
        "default": "Alt+Shift+L"
      },
      "description": "Lock Chatlist Panel"
    },
    "enable_confirm_message": {
      "suggested_key": {
        "default": "Alt+Shift+S"
      },
      "description": "Ask before sending message"
    }
  }
}
